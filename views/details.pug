            #tab-pane-3.tab-pane.fade
              .row
                .col-md-6
                  h4.mb-4=` ${reviews.length} review for "${product.name}"`
                  each review in reviews 
                    .media.mb-4
                      img.img-fluid.mr-3.mt-1(src=`/img/${review.userId.photo}` alt='Image' style='width: 45px')
                      .media-body
                        h6=review.userId.name
                          small
                            | - 
                            i=`${review.createdAt.toISOString().slice(0, 10)}`
                        .text-primary.mb-2
                          i.fas.fa-star
                          i.fas.fa-star
                          i.fas.fa-star
                          i.fas.fa-star-half-alt
                          i.far.fa-star
                        p=review.review 
                .col-md-6
                  h4.mb-4 Leave a review
                  small
                    | Your email address will not be published. Required fields are
                    | marked *
                  .d-flex.my-3
                    p.mb-0.mr-2 Your Rating * :
                    .text-primary
                      i.far.fa-star
                      i.far.fa-star
                      i.far.fa-star
                      i.far.fa-star
                      i.far.fa-star
                  form
                    .form-group
                      label(for='message') Your Review *
                      textarea#message.form-control(cols='30' rows='5')
                    .form-group
                      label(for='name') Your Name *
                      input#name.form-control(type='text')
                    .form-group
                      label(for='email') Your Email *
                      input#email.form-control(type='email')
                    .form-group.mb-0
                      input.btn.btn-primary.px-3(type='submit' value='Leave Your Review')
  // Products Start
  .container-fluid.py-5
    h2.section-title.position-relative.text-uppercase.mx-xl-5.mb-4
      span.bg-secondary.pr-3 You May Also Like
    .row.px-xl-5
      .col
        .owl-carousel.related-carousel
          each good in recentProducts
            .product-item.bg-light
              .product-img.position-relative.overflow-hidden
                img.img-fluid.w-100(src=`${good.image[0]}` alt='')
                .product-action
                  a.btn.btn-outline-dark.btn-square(href='')
                    i.fa.fa-shopping-cart
                  a.btn.btn-outline-dark.btn-square(href='')
                    i.far.fa-heart
                  a.btn.btn-outline-dark.btn-square(href='')
                    i.fa.fa-sync-alt
                  a.btn.btn-outline-dark.btn-square(href='')
                    i.fa.fa-search
              .text-center.py-4
                a.h6.text-decoration-none.text-truncate(href='')=good.name 
                .d-flex.align-items-center.justify-content-center.mt-2
                  h5=`$${good.price}`
                  h6.text-muted.ml-2
                    del=`$${good.price*1.5}`
                .d-flex.align-items-center.justify-content-center.mb-1
                  small.fa.fa-star.text-primary.mr-1
                  small.fa.fa-star.text-primary.mr-1
                  small.fa.fa-star.text-primary.mr-1
                  small.fa.fa-star.text-primary.mr-1
                  small.fa.fa-star.text-primary.mr-1
                  small=`${good.reviews.length}`
  // Back to Top
  a.btn.btn-primary.back-to-top(href='#')
    i.fa.fa-angle-double-up

extends base

block content
  .container-fluid
    .row.px-xl-5
      .col-12
        nav.breadcrumb.bg-light.mb-30
          a.breadcrumb-item.text-dark(href='/') Home
          a.breadcrumb-item.text-dark(href='#') Shop
          span.breadcrumb-item.active Shop Detail
  // Shop Detail Start
  .container-fluid.pb-5
    .row.px-xl-5
      .col-lg-5.mb-30
        #product-carousel.carousel.slide(data-ride='carousel')
          .carousel-inner.bg-light
            .carousel-item.active
              img.w-100.h-100(src=`${product.image[0]}` alt='Image')
            each photo in product.image.splice(1)
              .carousel-item
                img.w-100.h-100(src=`${photo}` alt='Image')
          a.carousel-control-prev(href='#product-carousel' data-slide='prev')
            i.fa.fa-2x.fa-angle-left.text-dark
          a.carousel-control-next(href='#product-carousel' data-slide='next')
            i.fa.fa-2x.fa-angle-right.text-dark
      .col-lg-7.h-auto.mb-30
        .h-100.bg-light.p-30
          h3=product.name 
          .d-flex.mb-3
            .text-primary.mr-2
              small.fas.fa-star
              small.fas.fa-star
              small.fas.fa-star
              small.fas.fa-star-half-alt
              small.far.fa-star
            small.pt-1=` (${product.reviews.length} Reviews)`
          h3.font-weight-semi-bold.mb-4=`$${product.price}` 
          p.mb-4=product.description
          .d-flex.mb-3
            strong.text-dark.mr-3 Sizes:
            form
              each size in product.sizes
                .custom-control.custom-radio.custom-control-inline
                  input.custom-control-input(type='radio' name='size' id=`size-${product.sizes.indexOf(size)+1}}`)
                  label.custom-control-label(for=`size-${product.sizes.indexOf(size)+1}}`)=size
          .d-flex.mb-4
            strong.text-dark.mr-3 Colors:
            form
              each color in product.colors
                .custom-control.custom-radio.custom-control-inline
                  input.custom-control-input(type='radio' name='color' id=`color-${product.colors.indexOf(color)+1}`)
                  label.custom-control-label(for=`color-${product.colors.indexOf(color)+1}`)=color
          .d-flex.align-items-center.mb-4.pt-2
            .input-group.quantity.mr-3(style='width: 130px')
              .input-group-btn
                button.btn.btn-primary.btn-minus
                  i.fa.fa-minus
              input.form-control.bg-secondary.border-0.text-center(type='text' value='1')
              .input-group-btn
                button.btn.btn-primary.btn-plus
                  i.fa.fa-plus
            button.btn.btn-primary.px-3
              i.fa.fa-shopping-cart.mr-1
              |  Add To Cart
          .d-flex.pt-2
            strong.text-dark.mr-2 Share on:
            .d-inline-flex
              a.text-dark.px-2(href='')
                i.fab.fa-facebook-f
              a.text-dark.px-2(href='')
                i.fab.fa-twitter
              a.text-dark.px-2(href='')
                i.fab.fa-linkedin-in
              a.text-dark.px-2(href='')
                i.fab.fa-pinterest
    .row.px-xl-5
      .col
        .bg-light.p-30
          .nav.nav-tabs.mb-4
            a.nav-item.nav-link.text-dark.active(data-toggle='tab' href='#tab-pane-1') Description
            a.nav-item.nav-link.text-dark(data-toggle='tab' href='#tab-pane-2') Information
            a.nav-item.nav-link.text-dark(data-toggle='tab' href='#tab-pane-3')=` Reviews (${reviews.length})`
          .tab-content
            #tab-pane-1.tab-pane.fade.show.active
              h4.mb-3 Product Description
              p=product.description
